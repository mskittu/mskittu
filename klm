#!/bin/bash

# Last day of the current month
cob_date_1=$(date -d "$(date +%Y-%m-01) +1 month -1 day" '+%F')
echo "cob_date_1 = $cob_date_1"

# Last day of the previous month
cob_date_2=$(date -d "$(date +%Y-%m-01) -1 day" '+%F')
echo "cob_date_2 = $cob_date_2"

# Last day of two months ago
cob_date_3=$(date -d "$(date +%Y-%m-01) -2 months -1 day" '+%F')
echo "cob_date_3 = $cob_date_3"
