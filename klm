def combine_pcds_hive_data():
    try:
        pcds_output_path = r"C:\Users\DELL\Documents\pcds_output_csv_file.csv"
        hive_output_path = r"C:\Users\DELL\Documents\intermediate_output_csv_file.csv"
        combined_output_path = r"C:\Users\DELL\Documents\pcds_hive_output_comb_csv_file.csv"

        # Load PCDS and Hive Intermediate Data
        pcds_df = pd.read_csv(pcds_output_path)
        hive_df = pd.read_csv(hive_output_path)

        # Combine both DataFrames
        combined_df = pd.concat([pcds_df, hive_df], ignore_index=True)

        # Save the final combined CSV output
        combined_df.to_csv(combined_output_path, index=False)
        print(f"Final Combined CSV file saved at: {combined_output_path}")
        return combined_df

    except Exception as e:
        print(f"Error combining PCDS and Hive data: {e}")
        raise
